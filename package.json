{
    "author": "hak33m16",
    "name": "gradle-properties-manager",
    "version": "0.0.1",
    "description": "CLI utility for managing several instances of global gradle.properties files",
    "license": "MIT",
    "bin": {
        "gradle-properties-manager": "./bin/gradle-properties-manager"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "cli",
        "gradle",
        "properties",
        "manager",
        "gradle-properties-manager"
    ],
    "scripts": {
