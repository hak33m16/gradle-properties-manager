        "ts-node": "^9.1.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/inquirer": "^7.3.1",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "eslint": "^7.23.0",
        "jest": "^26.6.3",
        "prettier": "2.2.1",
        "ts-jest": "^26.5.4",
        "typescript": "^4.2.4"
    }
